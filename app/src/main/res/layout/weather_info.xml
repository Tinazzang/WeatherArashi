<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   //顶部工具栏
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city"/>
        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@+id/title_city_manager"
            android:background="#A71717"/>
        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp"/>
        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update"/>
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@+id/title_update_btn"
            android:src="@drawable/title_share"/>
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@+id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:layout_marginTop="0dp"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:padding="5.0dip">
        //城市名称
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@android:color/white"
            android:textSize="35.0sp" />
        //天气图标
        <ImageView
            android:id="@+id/weather_img"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@id/city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dip"
            android:layout_marginStart="30dip"
            android:src="@drawable/biz_plugin_weather_qing"/>
        //当前温度
        <TextView
            android:id="@+id/wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/weather_img"
            android:layout_toEndOf="@id/weather_img"
            android:layout_below="@id/city"
            android:layout_marginTop="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginStart="5.0dip"
            android:singleLine="true"
            android:text="12℃"
            android:textColor="@android:color/white"
            android:textSize="35.0sp"/>
        <TextView
            android:id="@+id/shidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wendu"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/wendu"
            android:layout_alignStart="@id/wendu"
            android:singleLine="true"
            android:text="湿度:57%"
            android:textColor="@android:color/white"
            android:textSize="25.0sp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_img"
            android:layout_marginLeft="50.0dip"
            android:layout_marginStart="50.0dip"
            android:singleLine="true"
            android:text="今天18:25发布"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <TextView
            android:id="@+id/fengli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shidu"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/wendu"
            android:layout_alignStart="@id/wendu"
            android:singleLine="true"
            android:text="风力：2级"
            android:textColor="@android:color/white"
            android:textSize="25.0sp"/>
        <TextView
            android:id="@+id/fengxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fengli"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/wendu"
            android:layout_alignStart="@id/wendu"
            android:singleLine="true"
            android:text="风向：西北风"
            android:textColor="@android:color/white"
            android:textSize="25.0sp"/>
        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fengxiang"
            android:layout_marginTop="10.dip"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text="今天   星期三"
            android:textColor="@android:color/white"
            android:textSize="20.0sp" />
        <TextView
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/week"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40.0dip"
            android:layout_marginStart="40.0dip"
            android:layout_marginTop="5.0dip"
            android:text="10℃"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <TextView
            android:id="@+id/hyphen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/low"
            android:layout_toEndOf="@id/low"
            android:layout_alignTop="@id/low"
            android:text="~"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hyphen"
            android:layout_toEndOf="@id/hyphen"
            android:layout_alignTop="@id/low"
            android:text="20℃"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/low"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/low"
            android:layout_alignStart="@id/low"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/low"
            android:layout_alignStart="@id/low"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <TextView
            android:id="@+id/sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wind"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/low"
            android:layout_alignStart="@id/low"
            android:text="日出：06:17"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <TextView
            android:id="@+id/sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sunrise"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/low"
            android:layout_alignStart="@id/low"
            android:text="日落：17:43"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
        <ImageView
            android:id="@+id/pm25_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/low"
            android:layout_marginTop="5.0dip"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_plugin_weather_0_50"/>
        <TextView
            android:id="@+id/pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/low"
            android:layout_toRightOf="@id/pm25_img"
            android:layout_toEndOf="@id/pm25_img"
            android:layout_marginLeft="10.0dip"
            android:layout_marginStart="10.0dip"
            android:text="pm2.5"
            android:textColor="@android:color/white"
            android:textSize="20.0sp"/>
        <TextView
            android:id="@+id/pm25_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/pm25"
            android:layout_toRightOf="@id/pm25"
            android:layout_toEndOf="@id/pm25"
            android:layout_marginLeft="10.0dip"
            android:layout_marginStart="10.0dip"
            android:text="220"
            android:textColor="@android:color/white"
            android:textSize="20.0sp"/>
        <TextView
            android:id="@+id/quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pm25_data"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/pm25"
            android:layout_alignStart="@id/pm25"
            android:text="重度污染"
            android:textColor="@android:color/white"
            android:textSize="25.0sp"/>
        <TextView
            android:id="@+id/suggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quality"
            android:layout_marginTop="5.0dip"
            android:layout_alignLeft="@id/pm25"
            android:layout_alignStart="@id/pm25"
            android:text="不适宜户外活动"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"/>
    </RelativeLayout>
</RelativeLayout>